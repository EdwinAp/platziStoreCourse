<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tituloItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="transiciondeltitulo"
                tools:text="Titulo"/>

        <TextView
                android:id="@+id/detailItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:transitionName="transiciondeldesc"

                tools:text="Titulo"/>

        <ImageView
                android:id="@+id/cabezeraImagen"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/apacheicon"
                android:scaleType="centerCrop"
                android:transitionName="transiciondeImagen"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">



            <TextView
                    android:id="@+id/priceItem"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:transitionName="transiciondeprecio"
                    tools:text="Titulo"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>